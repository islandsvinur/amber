<?xml version="1.0"?>
<psySpec name="Ambient Earth" version="1.20">  
    
    <global>
        <port>10000</port>
        <title>Ambient Earth</title>
    </global>

    <whiteboard name="WB.Stories">
        <description>
            Stores all crawled stories.
        </description>
    </whiteboard>

    <whiteboard name="WB.Analysis">
        <description>
            Story analysis is stored here.
        </description>
    </whiteboard>

    <whiteboard name="WB.Control">
        <description>
            Control messages go here.
        </description>
    </whiteboard>

    <module name="Crawler.RSS">
        <executable />
        <parameter name="FeedURI" type="String" value="http://ijsland.luijten.org/feed" />
        <parameter name="RefreshTime" type="Integer" min="1" max="180" value="60" />
        <description>
            This module gets RSS feeds via HTTP, parses them and puts the
            stories in them on the whiteboard (along with meta-data).
        </description>
        <spec>
            <post to="WB.Stories" type="Story" />
            <trigger from="WB.Control" type="Feed.*" />
        </spec>
    </module>

    <module name="Sieve.KeywordSpotter">
        <executable />
        <description>
            This module will analyze stories in the raw-stories whiteboard for
            the existence of certain keywords and puts matching stories on the
            processed-stories whiteboard, adding a category to them.
        </description>
        <spec>
            <trigger from="WB.Stories" type="Story" />
            <post to="WB.Analysis" type="Analysis.KeywordSpotter" />
        </spec>
    </module>

    <module name="ShowOff.FullScreen">
        <executable />
        <description>
            This module gets stories from the processed whiteboard and uses the
            story's meta-data to display the stories in a certain way that is
            ambient in its interaction.
        </description>
        <spec>
            <trigger from="WB.Stories" type="Story" />
            <trigger from="WB.Analysis" type="Analysis.*" />
        </spec>
    </module>

</psySpec> 
